<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
  
  <menuitem name="project-announcement" title="Announcement" order="37" parent="menu-project-root" action="project.announcement" if="__config__.app.isApp('business-support')"/>
  
  <action-view name="project.announcement" title="Announcement" model="com.axelor.apps.businesssupport.db.Announcement">
    <view type="grid" name="announcement-grid" />
	<view type="form" name="announcement-form" />
  </action-view>
  
  <menuitem title="Versions" name="project-versions" parent="menu-project-root" action="action.version.view.all.versions" order="36" if="__config__.app.isApp('business-support')"/>
 
  <action-view name="action.version.view.all.versions" title="Versions" model="com.axelor.apps.businesssupport.db.Version">
	<view type="grid" name="version-grid"/>
	<view type="form" name="version-form"/>
  </action-view>
  
  <menuitem name="project-task-customer" title="Tasks" parent="menu-project-root" order="12" if="__config__.app.isApp('business-support')"/>

  <menuitem name="project-task-customer-new" title="New tasks" parent="project-task-customer" action="project.task.customer.new" />

  <action-view name="project.task.customer.new" title="New tasks" model="com.axelor.team.db.TeamTask">
	<view type="grid" name="team-task-client-grid"/>
	<view type="form" name="team-task-client-form"/>
	<domain>self.status = :status AND self.isPrivate = false</domain>
	<context name="status" expr="eval: 'new'"/>
  </action-view>

  <menuitem name="project-task-customer-treated-by-customer" title="Tasks to be treated by customer" parent="project-task-customer"
	action="project.task.customer.treated.by.customer"/>

  <action-view name="project.task.customer.treated.by.customer" title="Tasks to be treated by customer" model="com.axelor.team.db.TeamTask">
	<view type="grid" name="team-task-client-grid"/>
	<view type="form" name="team-task-client-form"/>
	<domain>self.status = :status AND self.isPrivate = false AND self.assignment = 1</domain>
	<context name="status" expr="eval: 'new'"/>
  </action-view>

  <menuitem name="project-task-customer-treated-by-provider" title="Tasks to be treated by provider" parent="project-task-customer"
	action="project.task.customer.treated.by.provider"/>

  <action-view name="project.task.customer.treated.by.provider" title="Tasks to be treated by provider" model="com.axelor.team.db.TeamTask">
	<view type="grid" name="team-task-client-grid"/>
	<view type="form" name="team-task-client-form"/>
	<domain>self.status = :status AND self.isPrivate = false AND self.assignment = 2</domain>
	<context name="status" expr="eval: 'new'"/>
  </action-view>

  <menuitem name="project-task-customer-open-all" title="All open tasks" parent="project-task-customer"
	action="project.task.customer.open.all"/>

  <action-view name="project.task.customer.open.all" title="All open tasks" model="com.axelor.team.db.TeamTask">
	<view type="grid" name="team-task-client-grid"/>
	<view type="form" name="team-task-client-form"/>
	<domain>self.status IN :status_open AND self.isPrivate = false</domain>
	<context name="status_open" expr="#{['new', 'in-progress']}"/>
  </action-view>

  <menuitem name="project-task-customer-all" title="All tickets" parent="project-task-customer"
	action="project.task.customer.all"/>

  <action-view name="project.task.customer.all" title="All tickets" model="com.axelor.team.db.TeamTask">
	<view type="grid" name="team-task-client-grid"/>
	<view type="form" name="team-task-client-form"/>
  </action-view>

</object-views>
 