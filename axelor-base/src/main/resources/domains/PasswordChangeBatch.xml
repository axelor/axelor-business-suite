<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

    <module name="base" package="com.axelor.apps.base.db" />

    <entity name="PasswordChangeBatch">
        <boolean name="generateNewRandomPasswords" title="Generate a new random passwords"/>
        <boolean name="updatePasswordNextLogin" title="Force the users to update password the next login"/>
		<boolean name="allUsers" title="All users"/>
		<many-to-many name="users" title="Users" ref="com.axelor.auth.db.User"/>
		<many-to-many name="groups" title="Groups" ref="com.axelor.auth.db.Group"/>
		<integer name="nbOfDaySinceLastUpdate" title="Number of days since last update" help="Only the users for which the password has not been updated since this number of days will be taken into account."/>
		
		<string name="description" title="Description" large="true" />
		<one-to-many name="batchList" ref="com.axelor.apps.base.db.Batch" mappedBy="passwordChangeBatch" title="Batchs" />
    </entity>

</domain-models>
