<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<form name="team-form" id="base-team-form" title="Team" model="com.axelor.team.db.Team" onSave="com.axelor.mail.web.MailController:autoSubscribe" onNew="action-quality-team-record-default">
  		<panel-include view="team-form" from="axelor-core"/>
	</form>

    <cards name="team-cards" id="base-team-cards" title="Teams" model="com.axelor.team.db.Team">
       <field name="name"/>
       <field name="description"/>
       <template><![CDATA[
          <div>
            <div class="span4 card-image">
               <img ng-src="{{$image(null, 'image')}}">
               <strong>{{name}}</strong>
            </div>
            <div class="span8">
               <strong>{{name}}</strong>
               <p class="muted">{{description}}</p>
               <div class="buttons">
                   <a class="btn btn-small btn-success" href="" ng-show="!_following" ui-action-click="com.axelor.mail.web.MailController:follow" x-translate>Join</a>
                   <a class="btn btn-small btn-danger" href="" ng-show="_following" ui-action-click="com.axelor.mail.web.MailController:unfollow" x-translate>WorkTeam.Leave</a>
               </div>
            </div>
          </div>
        ]]></template>
    </cards>
    
	<action-record name="action-quality-team-record-default" model="com.axelor.team.db.Team">
 		<field name="typeSelect" expr="eval: _typeSelect" if="_typeSelect != null"/>
  		<field name="typeSelect" expr="eval: 'general'" if="_typeSelect == null"/>
	</action-record>
	
</object-views>