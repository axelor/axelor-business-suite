<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
    
    <grid name="cash-flow-forecast-grid" title="Cash Flow Forecasts" model="com.axelor.apps.cash.management.db.CashFlowForecast">
       <field name="company"/>
       <field name="bankDetails"/>
       <field name="typeSelect"/>
       <field name="amount"/>
       <field name="estimatedDate"/>
       <field name="realizedSelect"/>
    </grid>
 
	 <form name="cash-flow-forecast-form" title="Cash Flow Forecast" model="com.axelor.apps.cash.management.db.CashFlowForecast"
	 	onNew="action-cash-flow-forecast-record-default-on-new">
	 	<panel >
			<field name="company" onChange="action-cash-flow-forecast-record-bank"/>
	       	<field name="bankDetails" onSelect="action-accounting-batch-attrs-bank-details-domain"/>
	       	<field name="typeSelect"/>
	       	<field name="amount"/>
	       	<field name="estimatedDate"/>
	       	<field name="cashFlowReason"/>
	       	<field name="realizedSelect" widget="RadioSelect"/>
	       	<field name="comments" colSpan="12"/>
	 	</panel>
	 </form>
	 
	 <action-record name="action-cash-flow-forecast-record-default-on-new" model="com.axelor.apps.cash.management.db.CashFlowForecast">
	 	<field name="company" expr="eval: __user__.activeCompany"/>
	 	<field name="bankDetails" expr="eval: __user__.activeCompany?.defaultBankDetails"/>
	 </action-record>
	 
	  <action-record name="action-cash-flow-forecast-record-bank" model="com.axelor.apps.cash.management.db.CashFlowForecast">
	 	<field name="bankDetails" expr="eval: company?.defaultBankDetails"/>
	 </action-record>
    
</object-views>