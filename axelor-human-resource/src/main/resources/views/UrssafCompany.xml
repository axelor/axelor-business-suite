	<grid name="urssaf-company-grid" title="Urssaf companies" model="com.axelor.apps.hr.db.UrssafCompany">
       <field name="name"/>
       <field name="dpaeId"/>
       <field name="address"/>
       <field name="address.zip"/>
       <field name="address.city"/>
       <field name="emailAddress"/>
