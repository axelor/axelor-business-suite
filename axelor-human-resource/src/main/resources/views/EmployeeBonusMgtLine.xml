<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">

	<grid name="employee-bonus-mgt-line-grid" title="Employee bonus" model="com.axelor.apps.hr.db.EmployeeBonusMgtLine" >
		<hilite if="statusSelect &gt; 1" background="danger"/>
		<field name="employee" />
        <field name="amount" width="100px"/>
        <field name="coef" width="100px"/>
        <field name="weeklyPlanning" canEdit="false" width="120px"/>
		<field name="seniorityDate" />
        <field name="statusSelect" width="100px"/>
    </grid>
    
    <grid name="employee-bonus-mgt-line-employee-grid" title="Employee bonus" model="com.axelor.apps.hr.db.EmployeeBonusMgtLine" >
		<field name="amount" />
		<field name="employeeBonusMgt.payPeriod" />
		<field name="employeeBonusMgt.employeeBonusType" />
		<field name="coef" />
		<field name="weeklyPlanning" canEdit="false" />
		<field name="employeeBonusMgt" hidden="true" />
    </grid>

    <form name="employee-bonus-mgt-line-form" title="Employee bonus" model="com.axelor.apps.hr.db.EmployeeBonusMgtLine"
        onLoad="action-employee-bonus-mgt-line-attrs-payroll-preparation">
    	<panel name="main">
    		<field name="employee" />
			<field name="amount" />
			<field name="coef" />
			<field name="weeklyPlanning" canEdit="false" />
			<field name="seniorityDate" />
        </panel>
        <panel name="payrollPreparationPanel" title="Payroll preparation" sidebar="true" readonly="true" hidden="true">
            <field name="payrollPreparation" showTitle="false" colSpan="8" />
            <field name="payrollPreparation.exported" colSpan="4" />
        </panel>
    </form>

    <form name="employee-bonus-mgt-line-employee-form" title="Employee bonus" model="com.axelor.apps.hr.db.EmployeeBonusMgtLine"
        onLoad="action-employee-bonus-mgt-line-attrs-payroll-preparation">
    	<panel name="main">
			<field name="amount" />
			<field name="coef" />
			<field name="employeeBonusMgt.payPeriod" />
			<field name="employeeBonusMgt.employeeBonusType" />
			<field name="weeklyPlanning" canEdit="false" />
			<field name="seniorityDate" />
			<field name="employeeBonusMgt" hidden="true" />
        </panel>
        <panel name="payrollPreparationPanel" title="Payroll preparation" sidebar="true" readonly="true" hidden="true">
            <field name="payrollPreparation" showTitle="false" colSpan="8" />
            <field name="payrollPreparation.exported" colSpan="4" />
        </panel>
    </form>

    <action-attrs name="action-employee-bonus-mgt-line-attrs-payroll-preparation">
        <attribute name="hidden" for="payrollPreparationPanel" expr="eval: !payrollPreparation" if="__user__.employee?.hrManager" />
    </action-attrs>

</object-views>