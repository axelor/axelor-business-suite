<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
    
    <grid name="hr-config-grid" title="Human Resources configurations" model="com.axelor.apps.hr.db.HRConfig">
        <field name="company" form-view="company-form" grid-view="company-grid"/>
    </grid>

	<form name="hr-config-form" title="Human Resources configuration" model="com.axelor.apps.hr.db.HRConfig" onNew="action-hr-config-record-default" width="large">
	  	<panel name="main">
	    	<field name="company" form-view="company-form" colSpan="4" grid-view="company-grid"/>
	  	</panel>
	  	<panel name="general" title="General">
	  		<field name="publicHolidayPlanning" canNew="true"/>
	  		<field name="weeklyPlanning" canNew="true"/>
	  	</panel>
	  	<panel-tabs>
    <panel name="timesheetTemplates" title="Timesheet Templates">
    	<field name="timesheetMailNotification"/>
    	<field name="sentTimesheetTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!timesheetMailNotification"/>
    	<field name="validatedTimesheetTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!timesheetMailNotification"/>
    	<field name="refusedTimesheetTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!timesheetMailNotification"/>
  	</panel>
    <panel name="extraHoursTemplates" title="Extra Hours Templates">
    	<field name="extraHoursMailNotification"/>
    	<field name="sentExtraHoursTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!extraHoursMailNotification"/>
    	<field name="validatedExtraHoursTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!extraHoursMailNotification"/>
    	<field name="refusedExtraHoursTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!extraHoursMailNotification"/>
  	</panel>
     <panel name="expenseTemplates" title="Expense Templates">
    	<field name="expenseMailNotification"/>
    	<field name="sentExpenseTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!expenseMailNotification"/>
    	<field name="validatedExpenseTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!expenseMailNotification"/>
    	<field name="refusedExpenseTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!expenseMailNotification"/>
  	</panel>
  	<panel name="leavesTemplates" title="Leaves Templates">
    	<field name="leaveMailNotification"/>
    	<field name="sentLeaveTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!leaveMailNotification"/>
    	<field name="validatedLeaveTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!leaveMailNotification"/>
    	<field name="refusedLeaveTemplate" canNew="true" form-view="template-form" grid-view="template-grid" hideIf="!leaveMailNotification"/>
  	</panel>
   </panel-tabs>
	  	<panel-related field="kilometricAllowanceRateList" colSpan="12"/>
	</form>
	
	<action-record name="action-hr-config-record-default" model="com.axelor.apps.hr.db.HRConfig">
		<field name="company" expr="eval: _company" if="_company != null"/>
		<field name="company"  expr="eval:__user__.activeCompany" if="_company == null &amp;&amp; __user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__.of(Company).all().fetchOne()" if="_company == null &amp;&amp; __user__.activeCompany == null &amp;&amp; __repo__.of(Company).all().fetch().size == 1"/>
	</action-record>
	
</object-views>