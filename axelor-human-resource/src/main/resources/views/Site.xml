<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">
	
	<grid name="valvital-site-grid" title="Sites" model="com.axelor.apps.hr.db.Site">
	   <field name="name"/>
	   <field name="workArea"/>
	   <field name="registrationCode"/>
  	   <field name="urssafCompany"/>
       <field name="healthService"/>
	</grid>
	
	<form name="valvital-site-form" title="Sites" model="com.axelor.apps.hr.db.Site">
	 <panel name="mainPanel">
	   <field name="name"/>
	   <field name="workArea" required="true"/>
	   <field name="urssafCompany" canNew="true" canEdit="true" form-view="urssaf-company-form" grid-view="urssaf-company-grid" required="true"/>
	   <field name="registrationCode"/>
  	   <field name="healthService"/>
       <field name="healthServiceAddress" canNew="true"/>
	 </panel>
	</form>	
	
</object-views>