<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">
    
    <grid name="crm-calendar-grid" title="Calendars" model="com.axelor.apps.crm.db.Calendar">
        <field name="name"/>
        <field name="user"/>
    </grid>
    
    <form name="crm-calendar-form" title="Calendar" model="com.axelor.apps.crm.db.Calendar" onSave="com.axelor.apps.crm.web.CalendarController:validate" width="large">
		<toolbar>
		  <button name="testConnect" title="connect" onClick="save,com.axelor.apps.crm.web.CalendarController:validate,save,com.axelor.apps.crm.web.CalendarController:testConnect"/>
		  <button name="exportCalendar" title="Export calendar" onClick="com.axelor.apps.crm.web.CalendarController:exportCalendar"/>
    	  <button name="importCalendar" title="Import calendar" onClick="com.axelor.apps.crm.web.CalendarController:importCalendar"/>
    	  <button name="synchronizeCalendars" title="Synchronize calendar" onClick="save,com.axelor.apps.crm.web.CalendarController:validate,save,com.axelor.apps.crm.web.CalendarController:synchronizeCalendar"/>
    	</toolbar>
		<panel name="main" >
		  <field name="name"/>
		  <field name="keepRemote" />
		  <field name="user" canNew="false" canEdit="false" canView="false"/>
		</panel>
		<panel name="connectionSettings" title="Connection settings">
		  <field name="url"/>
		  <field name="typeSelect" />
		  <field name="isSslConnection" onChange="action-calendar-record-set-port"/>
		  <field name="port" />
		  <field name="isValid" readonly="true"/>
		</panel>
		<panel name="credentials" title="Credentials">
		  <field name="login"/>
		  <field name="change" title="Change password?" showIf="id &amp;&amp; !$readonly()" widget="boolean"/>
		  <panel colSpan="12" showIf="change || !id">
	        <field name="newPassword" title="Password" placeholder="new password" requiredIf="!id || change" validIf="(!change &amp;&amp; id) || confirm == newPassword" widget="password" />
	        <field name="confirm" title="Confirm" placeholder="confirm password" widget="password"/>
 		  	<field name="password" hidden="true"/>
	      </panel>
		</panel>
	</form>
    
    <action-record name="action-calendar-record-set-port" model="com.axelor.apps.crm.db.Calendar">
    	<field name="port" expr="eval: isSslConnection ? 443 : 80"/>
    </action-record>
   	 
</object-views>