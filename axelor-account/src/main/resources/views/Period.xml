<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<form model="com.axelor.apps.base.db.Period" title="Moves to validate" name="period-moves-to-validate-form">
		<panel-dashlet action="action-view-period-moves-to-validate"/>
		<panel name="buttonsPanel">
			<button name="continueBtn" title="Continue" onClick="action-method-period-close-continue"/>
		</panel>
	</form>
	
	<action-group name="action-group-period-close" id="action-account-group-period-close">
		<action name="save"/>
		<action name="action-method-period-search-moves"/>
	</action-group>
	
	<action-method name="action-method-period-search-moves">
		<call class="com.axelor.apps.account.web.PeriodController" method="searchPeriodMoves"/>
	</action-method>
	
	<action-method name="action-method-period-close-continue">
		<call class="com.axelor.apps.account.web.PeriodController" method="continueClose"/>
	</action-method>
	
</object-views>