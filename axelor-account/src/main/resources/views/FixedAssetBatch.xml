<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="fixed-asset-batch-grid" title="Fixed asset batches" model="com.axelor.apps.account.db.FixedAssetBatch">
    	<field name="actionSelect" />
    	<field name="code" x-bind="{{code|unaccent|uppercase}}" />
		<field name="company" form-view="company-form" grid-view="company-grid" />
		<field name="createdOn"/>
		<field name="createdBy" form-view="user-form" grid-view="user-grid"/>
    </grid>
 
	<form name="fixed-asset-batch-form" title="Fixed asset Batch" model="com.axelor.apps.account.db.FixedAssetBatch" onNew="action-fixed-asset-batch-record-on-new" width="large">
		<panel name="mainPanel" >
		  <field name="actionSelect"/>
		  <field name="code" x-bind="{{code|unaccent|uppercase}}" onChange="action-base-batch-condition-check-unique-code"/>
		  <field name="company" widget="SuggestBox" form-view="company-form" grid-view="company-grid" />
		</panel>
		<panel>
		  <field name="createdOn" title="Created on"/>
		  <field name="createdBy" title="Created by" form-view="user-form" grid-view="user-grid"/>
		  <button name="realizeBtn" title="Realize" onClick="save,action-fixed-asset-batch-method-realize"/>
		</panel>
		<panel-tabs>    
		  <panel name="descriptionPanel" title="Description">
		    <field name="description" showTitle="false" colSpan="12"/>      
		  </panel>
		  <panel-related name="batchListPanel" field="batchList" colSpan="12" form-view="batch-form" grid-view="batch-grid" readonly="true" />
		</panel-tabs>
	</form>
	
	<action-record name="action-fixed-asset-batch-record-on-new" model="com.axelor.apps.account.db.FixedAssetBatch">
    	<field name="actionSelect" expr="1"/>
		<field name="company"  expr="eval:__user__.activeCompany" if="__user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="__user__.activeCompany == null &amp;&amp; __repo__(Company).all().count() == 1"/>
	</action-record>
	
	<action-method name="action-fixed-asset-batch-method-realize">
		<call class="com.axelor.apps.account.web.FixedAssetBatchController" method="realize"/>
	</action-method>

</object-views>