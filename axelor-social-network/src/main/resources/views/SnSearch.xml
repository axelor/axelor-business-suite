<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">

	<grid name="sn-search-grid" title="SN Search List" model="com.axelor.apps.network.db.SnSearch">
		<field name="lastName"/>
		<field name="firstName"/>
		<field name="email"/>
	</grid>

	<form name="sn-search-form" title="SN Search" model="com.axelor.apps.network.db.SnSearch" onNew="action-sn-search-method-partner">
		<panel title="Overview">
			<field name="lastName"/>
			<field name="firstName"/>
			<field name="email"/>
			<field name="partner" />
			<button name="search" title="Search" onClick="action-sn-search-method-search-profile, save"/>
		</panel>
		<panel-related field="snProfile" grid-view="sn-users-grid" form-view="sn-users-form"/>
	</form>
	
	<action-method name="action-sn-search-method-partner">
		<call class="com.axelor.apps.network.web.SocialNetworkController" method="searchPartner"/>
	</action-method>
	
	<action-method name="action-sn-search-method-search-profile">
		<call class="com.axelor.apps.network.web.SocialNetworkController" method="searchProfile"/>
	</action-method>

</object-views>
