<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">

	<grid name="sn-users-grid" title="SN Users List" model="com.axelor.apps.network.db.SnUsersList">
		<field name="lastName"/>
		<field name="firstName"/>
		<field name="email"/>
		<field name="uniqueID" />
	</grid>

	<form name="sn-users-form" title="SN Users" model="com.axelor.apps.network.db.SnUsersList">
		<panel title="Overview">
			<field name="lastName"  readonly="true"/>
			<field name="firstName" readonly="true"/>
			<field name="email" readonly="true"/>
			<field name="uniqueID"  readonly="true"/>
			<button name="profile" title="Open Profile" onClick="action-sn-user-method-profile"/>
			<button name="import" title="Import Profile" onClick="action-sn-user-method-import-profile"/>
		</panel>
	</form>
	
	
	<form name="sn-user-profile-form" title="SN Users" model="com.axelor.apps.network.db.SnUsersList" onNew="action-sn-user-profile-record-fields">
		<panel title="Overview" readonly="true">
			<field name="lastName" />
			<field name="firstName"/>
			<field name="email"/>
			<field name="uniqueID" />
			<field name="birthDate"/>
		</panel>
		<panel title="Others" readonly="true">
			<field name="other" colSpan="12"/>
		</panel>
		<panel>
			<button name="import" title="Import Profile" onClick="action-sn-user-method-import-profile"/>
		</panel>
	</form>
	
	<action-record name="action-sn-user-profile-record-fields" model="com.axelor.apps.network.db.SnUsersList">
		<field name="birthDate" expr="eval: _birthDate"/>
		<field name="lastName" expr="eval: _lastName"/>
		<field name="firstName" expr="eval: _firstName"/>
		<field name="email" expr="eval: _email"/>
		<field name="uniqueID" expr="eval: _uniqueID"/>
	</action-record>
	
	<action-method name="action-sn-user-method-profile">
		<call class="com.axelor.apps.network.web.SocialNetworkController" method="seeProfile"/>
	</action-method>
	
	<action-method name="action-sn-user-method-import-profile">
		<call class="com.axelor.apps.network.web.SocialNetworkController" method="importProfile"/>
	</action-method>
</object-views>
