<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">
  
    <action-view id="supplychain-action-wizard-view-add-pack" name="action-wizard-view-add-pack" title="Add Pack" model="com.axelor.apps.base.db.Wizard">
      <view type="form" name="add-pack-wizard"/>
      <view-param name="popup" value="reload"/>
      <view-param name="show-toolbar" value="false"/>
      <view-param name="show-confirm" value="false" />
      <view-param name="popup-save" value="false"/>
      <context name="_showRecord" expr="eval: _id"/>
      <context name="model" expr="eval: _model"/>
    </action-view>
  
    <form id="supplychain-add-pack-wizard" name="add-pack-wizard" model="com.axelor.apps.base.db.Wizard" title="Add Pack" onNew="action-add-pack-wizard-attrs-onload" extension="true">
      
      <extend target="//button[@name='addPackBtn']">
        <replace>
          <button name="saleAddPackBtn" title="Add Pack" showIf="model == 'com.axelor.apps.sale.db.SaleOrder'" readonlyIf="!$pack || !$qty" onClick="action-sale-order-method-add-pack"/> 
          <button name="invoiceAddPackBtn" title="Add Pack" showIf="model == 'com.axelor.apps.account.db.Invoice'" readonlyIf="!$pack || !$qty" onClick="action-invoice-method-add-pack"/>
          <button name="stockMoveAddPackBtn" title="Add Pack" showIf="model == 'com.axelor.apps.stock.db.StockMove'" readonlyIf="!$pack || !$qty" onClick="action-stock-move-method-add-pack"/>
        </replace>
      </extend>
         
    </form>

    <action-method name="action-invoice-method-add-pack">
    	<call class="com.axelor.apps.supplychain.web.InvoiceController" method="addPack"/>
    </action-method>
    
    <action-method name="action-stock-move-method-add-pack">
    	<call class="com.axelor.apps.supplychain.web.StockMoveController" method="addPack"/>
    </action-method>

</object-views>
