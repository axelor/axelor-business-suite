<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="purchase-order-budget-overview-line-grid" title="Budget overview lines" model="com.axelor.apps.account.db.BudgetOverviewLine">
       <field name="budget"/>
       <field name="amount"/>
    </grid>
    
    <grid name="purchase-order-budget-overview-line-complete-grid" title="Budget overview lines" model="com.axelor.apps.account.db.BudgetOverviewLine">
       <field name="budget"/>
       <field name="purchaseOrder"/>
       <field name="amount"/>
       <field name="purchaseOrder.validationDate"/>
    </grid>
 
	<form name="purchase-order-budget-overview-line-complete-form" title="Budget overview line" model="com.axelor.apps.account.db.BudgetOverviewLine">
		<panel name="mainPanel">
			<field name="budget" readonly="true"/>
			<field name="purchaseOrder" readonly="true"/>
			<field name="amount" readonly="true"/>
	       	<field name="purchaseOrder.validationDate"/>
		</panel>
	</form>
	
	<form name="purchase-order-budget-overview-line-form" title="Budget overview line" model="com.axelor.apps.account.db.BudgetOverviewLine">
		<panel name="mainPanel">
			<field name="budget" readonly="true"/>
			<field name="amount" readonly="true"/>
	       	<field name="purchaseOrder.validationDate"/>
		</panel>
	</form>
	
	<action-view name="action-purchase-order-see-budget-overview-lines" title="See budget overview lines"
		model="com.axelor.apps.account.db.BudgetOverviewLine">
		<view type="grid" name="purchase-order-budget-overview-line-complete-grid"/>
		<view type="form" name="purchase-order-budget-overview-line-complete-form"/>
		<domain>self.purchaseOrder.statusSelect IN (:status)</domain>
  		<context name="status" expr="eval: _status"/>
	</action-view>	 

</object-views>