<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.1.xsd">

	<grid name="bank-statement-grid" title="Bank Statements" model="com.axelor.apps.bankpayment.db.BankStatement" orderBy="-toDate,name">
		<field name="name" />
		<field name="fromDate" />
		<field name="toDate" />
		<field name="statusSelect"/>
	</grid>

	<form name="bank-statement-form" title="Bank Statement" model="com.axelor.apps.bankpayment.db.BankStatement" width="large" readonlyIf="statusSelect == 1 || statusSelect == 2">
		<panel name="main" colSpan="12">
			<field name="name"/>
			<field name="bankStatementFile" widget="binary-link" canNew="true"/>
			<field name="fromDate"/>
			<field name="toDate"/>
			<field name="ebicsPartner"/>
			<field name="ebicsPartner.ebicsBank"/>
			<field name="bankStatementFileFormat"/>
		</panel>
		<panel sidebar="true">
			<field name="createdBy"/>
			<field name="statusSelect" title="Status"/>
		</panel>
	</form>

 
    
</object-views>