<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">


	<chart name="chart.planned.charge.by.machine.hours" title="Charge previsionnelle par machine" onInit="action.production.chart.set.from.date.to.date">
		<search-fields>
			<field type="datetime" name="fromDateTime" title="From Date"/>
	 		<field type="datetime" name="toDateTime" title="To Date"/>
	 	</search-fields>
		<dataset type="rpc">com.axelor.apps.production.web.OperationOrderController:chargeByMachineHours</dataset>
		<category key="dateTime" type="date" />
		<series key="charge" groupBy="machine" type="line"/>
	</chart>
	
	
	<action-record name="action.production.chart.set.from.date.to.date" model="com.axelor.apps.production.db.Machine">
 	    <field name="toDateTime" expr="eval:__datetime__.plusDays(1)" />
 	    <field name="fromDateTime" expr="eval:__datetime__"/>
 	</action-record>
 	
 	<chart name="chart.planned.charge.by.machine.minutes" title="Charge previsionnelle par machine" onInit="action.production.chart.set.from.date.to.date">
		<search-fields>
			<field type="datetime" name="fromDateTime" title="From Date"/>
	 		<field type="datetime" name="toDateTime" title="To Date"/>
	 	</search-fields>
		<dataset type="rpc">com.axelor.apps.production.web.OperationOrderController:chargeByMachineMinutes</dataset>
		<category key="dateTime" type="date" />
		<series key="charge" groupBy="machine" type="line"/>
	</chart>
	
	
	<action-record name="action.production.chart.set.from.date.to.date" model="com.axelor.apps.production.db.Machine">
 	    <field name="toDateTime" expr="eval:__datetime__.plusDays(1)" />
 	    <field name="fromDateTime" expr="eval:__datetime__"/>
 	</action-record>

</object-views>
